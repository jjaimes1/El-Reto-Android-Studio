<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:gravity="center_horizontal"
    >


    <ImageView
        android:id="@+id/v1ImgUser"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/iconuser"
        android:visibility="visible"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />

    <TextView
        android:id="@+id/v1TextUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/v1TxtUser"
        android:textSize="30sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />

    <TextView
        android:id="@+id/v1Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"

        android:hint="@string/v1TxtPassword"
        android:textSize="30sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />

    <Button
        android:id="@+id/v1BtnLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/v1BtnLog" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />

    <Button
        android:id="@+id/v1BtnCreateAcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/v1BtnCreate" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/v1ImgInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/icoinfo"
        android:layout_gravity="right"
        />


</LinearLayout>